<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Material">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorPrimary">@color/green</item>
        <item name="android:colorAccent">@color/black</item>
        <item name="android:colorPrimaryDark">@color/lightblue</item>
        <item name="android:colorControlNormal">@color/lightblue</item>
        <item name="android:colorControlActivated">@color/green</item>
        <item name="android:colorControlHighlight">@color/blue</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.Category" parent="AppTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorPrimaryDark">@color/green</item>
        <item name="android:title">@string/choosecategory</item>
    </style>

    <style name="AppTheme.Events" parent="AppTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorPrimaryDark">@color/green</item>
        <item name="android:title">@string/events</item>
    </style>


    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <!-- Support library compatibility -->
        <item name="android:background">@color/lightblue</item>
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:title">@string/choosecategory</item>
    </style>

    <style name="MyActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:title">@string/choosecategory</item>
    </style>
</resources>
